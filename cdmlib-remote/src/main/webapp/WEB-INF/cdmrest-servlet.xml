<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
    http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-2.5.xsd
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
    ">
    <context:component-scan base-package="eu/etaxonomy/cdm/remote"/>
    
    <!-- Subclass of org.springframework.web.servlet.view.XmlViewResolver which 
    	 accepts a configuration file. The default configuration file is /WEB-INF/views.xml -->
    <bean  name="viewResolver" class="eu.etaxonomy.cdm.remote.view.PatternViewResolver">
 		<!-- FOR DEBUGING ONLY !!!!   
 		<property name="cache" value="false"/> 
 		 -->
    </bean>

	<bean id="datasourceContextHandlerInterceptor" class="eu.etaxonomy.cdm.remote.controller.interceptor.DatasourceContextHandlerInterceptor">
    </bean>
    <bean id="contentNegociationHandlerInterceptor" class="eu.etaxonomy.cdm.remote.controller.interceptor.ContentNegociationHandlerInterceptor">
        <property name="mapping">
            <map>
                <entry key="text/json" value="json"/>
            </map>
        </property>
        <property name="defaultExtension" value="json"/>
    </bean>
    
    <!--  first we try to find the controller using the simpleurlmapping, then the classname
          this follows the principal of "convention over configuration" -->   
    <bean class="org.springframework.web.servlet.mvc.annotation.DefaultAnnotationHandlerMapping">
        <property name="order" value="1" />
        <property name="interceptors">
            <list>
                <ref bean="datasourceContextHandlerInterceptor" />
                <ref bean="contentNegociationHandlerInterceptor" />
            </list>
        </property>         
    </bean>
    
    <bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
	</bean>
	
	<bean id="exceptionResolver" class="eu.etaxonomy.cdm.remote.exception.CdmExceptionResolver">
	 	<property name="exceptionMappings">
			<props>
			    <prop key="IllegalArgumentException">illegalArgumentException</prop>
			</props>
		</property>
        <!-- 
         <property name="contentNegociationHandlerInterceptor" ref="contentNegociationHandlerInterceptor"/>
         -->
    </bean>
    
    
	<!--
    <bean id="viewResolverJsp"  class="org.springframework.web.servlet.view.InternalResourceViewResolver">
	   	<property name="cache" value="false"/> <!- -  FOR DEBUGING ONLY !!!!  -  ->
        <property name="prefix" value="/jsp/"/>
        <property name="suffix" value=".jsp"/>
    </bean>
	 -->

</beans>