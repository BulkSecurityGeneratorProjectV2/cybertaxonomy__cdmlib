    <!-- 
	======= HandlerAdapters =======
	-->
    <bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
	</bean>
	
	<!-- needed when using SimpleUrlHandlerMapping -->
	<!-- INDEX.JSP
    <bean class="org.springframework.web.servlet.mvc.SimpleControllerHandlerAdapter" />
	-->
	<!-- 
	======= HandlerInterceptors =======
	-->
	<bean id="datasourceContextHandlerInterceptor" class="eu.etaxonomy.cdm.remote.controller.interceptor.DatasourceContextHandlerInterceptor"/>
    <bean id="localeContextHandlerInterceptor" class="eu.etaxonomy.cdm.remote.controller.interceptor.LocaleContextHandlerInterceptor"/>
    <bean id="contentNegociationHandlerInterceptor" class="eu.etaxonomy.cdm.remote.controller.interceptor.ContentNegociationHandlerInterceptor">
        <property name="mapping">
            <map>
                <entry key="text/json" value="json"/>
                <entry key="application/json" value="json"/>
                <entry key="application/xml" value="xml"/>
            </map>
        </property>
        <property name="defaultExtension" value="xml"/>
    </bean>
    
   <!-- 
	======= ViewControllers =======
	-->
    <bean id="urlFilenameViewController" class="org.springframework.web.servlet.mvc.UrlFilenameViewController">
    </bean>
	
	<!-- 
	======= Exception Handling =======
	-->
	<bean id="exceptionResolver" class="eu.etaxonomy.cdm.remote.exception.CdmExceptionResolver">
    </bean>
    
