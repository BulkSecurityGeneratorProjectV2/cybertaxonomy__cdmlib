  <modelVersion>4.0.0</modelVersion>
  <artifactId>cdmlib-services</artifactId>
  <name>EDIT Common Data Model Library</name>
  <version>0.5.0-SNAPSHOT</version>
  <description>EDIT CDM library</description>
  <scm>
    <connection>scm:svn:http://dev.e-taxonomy.eu/svn/trunk/cdmlib/cdmlibrary/</connection>
    <developerConnection>scm:svn:https://dev.e-taxonomy.eu/svn/trunk/cdmlib/cdmlibrary/</developerConnection>
    <url>http://dev.e-taxonomy.eu/trac/browser/trunk/cdmlib/cdmlibrary/</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <includes>
            <include>**/*Test.java</include>
          </includes>
        	<systemProperties>
        		<property>
        			<name>hibernate.connection.driver_class</name>
        			<value>${hibernate.connection.driver_class}</value>
        		</property>
        		<property>
        			<name>hibernate.connection.url</name>
        			<value>${hibernate.connection.url}</value>
        		</property>
        		<property>
        			<name>hibernate.connection.username</name>
        			<value>${hibernate.connection.username}</value>
        		</property>
        		<property>
        			<name>hibernate.connection.password</name>
        			<value>${hibernate.connection.password}</value>
        		</property>
        	</systemProperties>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
  	 <dependency>
