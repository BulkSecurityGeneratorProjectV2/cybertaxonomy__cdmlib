<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:tx="http://www.springframework.org/schema/tx"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans   http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
    http://www.springframework.org/schema/context   http://www.springframework.org/schema/context/spring-context-2.5.xsd
    http://www.springframework.org/schema/tx   http://www.springframework.org/schema/tx/spring-tx-2.5.xsd
    ">
    
    <!-- ======================================================
       NOTICE: 
       
       These datasources are being used if the routing-datasource.xml is used in the 
       application-context.xml
       
       The bean ids will be used as key for the routing datasource 
       
       You MUST specify a default datasource
         a) implicit: by default the SimpleDriverDataSource with id="empty_default" will be used.
         b) Set the UpdatableRoutingDataSource property "defaultDatasourceName" 
            to the bean id of the datasource to define the default explicitely
       ======================================================-->
       
     <!-- ======================================================
       !!! THIS IS A TEMPLATE !!!
       
       In order to use it you must edit the 'url', 'username', 'password'
       and also 'driverClass' if you are not using mySQL.
       ======================================================-->
 
    <!-- setting a default data sources is mandatory   -->
    <bean id="default"  lazy-init="true" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
        <property name="driverClass" value="com.mysql.jdbc.Driver"/>
        <property name="username" value="user"/>
        <property name="password" value="123"/>
        <property name="url" value="jdbc:mysql://192.168.1.100/myCDMdatabase"/>
    </bean>
    <!-- the default data sources can be mapped to a specific URL root folder   -->
    <bean id="myCDMdatabase"  lazy-init="true" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
        <property name="driverClass" value="com.mysql.jdbc.Driver"/>
        <property name="username" value="user"/>
        <property name="password" value="123"/>
        <property name="url" value="jdbc:mysql://192.168.1.100/myCDMdatabase"/>
    </bean>
